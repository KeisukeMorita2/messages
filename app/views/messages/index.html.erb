<h1>メッセージ一覧</h1>

<% if @message.any? %>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>id</th>
                <th>タイトル</th>
                <th>メッセージ</th>
                <th>日付</th>
            </tr>
        </thead>
        <tbody>
            <% @message.each do |message| %>
                <tr>
                    <td><%= link_to message.id, message %></td>
                    <td><%= message.title %></td>
                    <td><%= message.content %></td>
                    <td><%= message.dateofmessage %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
    <div>
        <%= paginate @message %>
    </div>
    <% end %>

<%= link_to '新規メッセージの投稿', new_message_path, class: "btn btn-primary" %>